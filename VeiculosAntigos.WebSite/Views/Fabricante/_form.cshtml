@model VeiculosAntigos.Model.FabricanteDTO

<div class="win-title">
    <label>Fabricante</label>
</div>
<div class="win-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
                <label class="control-label col-md-3">Nome Fabricante</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.NomeFabricante, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeFabricante, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input id="btnOK" value="OK" class="btn btn-primary" />
                    <input id="btnCancel" value="Cancelar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
