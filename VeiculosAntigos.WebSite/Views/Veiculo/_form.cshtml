@using VeiculosAntigos.Model;
@model VeiculoDTO

@{ 
    IEnumerable<FabricanteDTO> fabricantes = ViewBag.Fabricantes;
    IEnumerable<TipoDeVeiculoDTO> tiposDeVeiculos = ViewBag.TiposDeVeiculos;
}

<div class="win-title">
    <label>Veículo</label>
</div>
<div class="win-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
                <label class="control-label col-md-3">Descrição</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Ano</label>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Ano, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ano, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Fabricante</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdFabricante, new SelectList(fabricantes, "Id", "NomeFabricante") , new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdFabricante, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3">Tipo Do Veículo</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdTipo, new SelectList(tiposDeVeiculos, "Id", "Tipo"), new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IdTipo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input id="btnOK" value="OK" class="btn btn-primary" />
                    <input id="btnCancel" value="Cancelar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
